extends ../layout

block content
  h1=title
  ul
    each author in authorList
      li
        a(href=author.url) #{author.name} 
        //|  (#{author.dob_formatted} - #{author.dob_formatted})
        |  #{author.dob_formatted?'('+author.dob_formatted+' - '+author.dob_formatted+')':''}

    else
      li There are no books.
